<odoo>
  <data>
  
    <!-- explicit list view definition -->
    <record id="action_ingresos" model="ir.actions.act_window">
      <field name="name">Ingresos</field>
      <field name="res_model">personal_monthly_budget.finanza</field>
      <field name="view_mode">tree,form,pivot</field>
    </record>

    <record id="action_egresos" model="ir.actions.act_window">
      <field name="name">Egresos</field>
      <field name="res_model">personal_monthly_budget.finanza</field>
      <field name="view_mode">tree,form,pivot</field>
    </record>

    <record id="action_categorias" model="ir.actions.act_window">
      <field name="name">Categorias</field>
      <field name="res_model">personal_monthly_budget.categorias</field>
      <field name="view_mode">tree,form,pivot</field>
    </record>

    <record model="ir.ui.view" id="finanzas_vista">
      <field name="name">finanza.tree</field>
      <field name="model">personal_monthly_budget.finanza</field>
      <field name="arch" type="xml">
        <tree>
          <field name="Descripcion"/>
          <field name="Monto"/>
          <field name="Fecha"/>
          <field name="Categoria"/>
          <field name="tipo"/>
        </tree>
      </field>
    </record>
    <record id="finanza_view_form" model="ir.ui.view">
          <field name="name">finanza.form</field>
          <field name="model">personal_monthly_budget.finanza</field>
          <field name="arch" type="xml">
            <form string="Tags">
                <sheet>
                    <group>
                        <field name="Descripcion"/>
                        <field name="Monto"/>
                        <field name="Fecha"/>
                        <field name="Categoria"/>
                        <field name="tipo" widget="radio"/>
                    </group>
                </sheet>
            </form>
          </field>
      </record>

