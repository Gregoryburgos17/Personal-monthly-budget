    <!-- Top menu item -->
    <menuitem name="Personal Monthly Budget" id="menu_ingresos_egresos" sequence="10"/>

    <!-- menu categories -->
    <menuitem name="Ingresos" id="menu_ingresos" parent="menu_ingresos_egresos" action="action_ingresos" sequence="10"/>
    <menuitem name="Egresos" id="menu_egresos" parent="menu_ingresos_egresos" action="action_egresos" sequence="10"/>
    <menuitem name="Categorias" id="menu_categorias" parent="menu_ingresos_egresos" action="action_categorias" sequence="10"/>

