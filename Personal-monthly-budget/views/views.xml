    <!-- Top menu item -->
    <menuitem name="Monthly Budget" id="menu_ingresos_egresos" sequence="10"/>

    <!-- menu categories -->
    <menuitem name="Dashboard" id="menu_dashboard" parent="menu_ingresos_egresos" action="action_dashboard" sequence="1"/>
    <menuitem name="Ingresos" id="menu_ingresos" parent="menu_ingresos_egresos" action="action_ingresos" sequence="2"/>
    <menuitem name="Egresos" id="menu_egresos" parent="menu_ingresos_egresos" action="action_egresos" sequence="3"/>
    <menuitem name="Categorias" id="menu_categorias" parent="menu_ingresos_egresos" action="action_categorias" sequence="4"/>

