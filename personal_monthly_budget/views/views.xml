<odoo>
  <data>
  
    <!-- explicit list view definition -->
    <record id="action_dashboard" model="ir.actions.act_window">
      <field name="name">Dashboard</field>
      <field name="res_model">personal_monthly_budget.finanza</field>
      <field name="view_mode">pivot</field>
    </record>

    <record id="action_ingresos" model="ir.actions.act_window">
      <field name="name">Ingresos</field>
      <field name="res_model">personal_monthly_budget.finanza</field>
      <field name="view_mode">tree,form,pivot</field>
      <field name="domain">[('tipo', '=', 'ingreso')]</field>
    </record>

    <record id="action_egresos" model="ir.actions.act_window">
      <field name="name">Egresos</field>
      <field name="res_model">personal_monthly_budget.finanza</field>
      <field name="view_mode">tree,form,pivot</field>
      <field name="domain">[('tipo', '=', 'egreso')]</field>
    </record>

    <record id="action_categorias" model="ir.actions.act_window">
      <field name="name">Categorias</field>
      <field name="res_model">personal_monthly_budget.categorias</field>
      <field name="view_mode">tree,form,pivot</field>
    </record>

    <record model="ir.ui.view" id="finanzas_vista">
      <field name="name">finanza.tree</field>
      <field name="model">personal_monthly_budget.finanza</field>
      <field name="arch" type="xml">
        <tree>
          <field name="Descripcion"/>
          <field name="Monto"/>
          <field name="Fecha"/>
          <field name="Categoria"/>
          <field name="tipo"/>
        </tree>
      </field>
    </record>
    <record id="finanza_view_form" model="ir.ui.view">
        <field name="name">finanza.form</field>
        <field name="model">personal_monthly_budget.finanza</field>
        <field name="arch" type="xml">
          <form string="Tags">
              <sheet>
                  <group>
                      <field name="Descripcion"/>
                      <field name="Monto"/>
                      <field name="Fecha"/>
                      <field name="Categoria"/>
                      <field name="tipo" widget="radio"/>
                  </group>
              </sheet>
          </form>
        </field>
    </record>
    <record id="view_dashboard_pivot" model="ir.ui.view">
        <field name="name">Dashboard</field>
        <field name="model">personal_monthly_budget.finanza</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="Fecha" type="row" interval="month"/>
                <field name="Categoria" type="col"/>
                <field name="display_monto" type="measure"/>
            </pivot>
        </field>
    </record>
    <!-- actions opening views on models -->

    <!-- server action to the one above -->
    <!-- Top menu item -->
    <menuitem name="Monthly Budget" id="menu_ingresos_egresos" web_icon="personal_monthly_budget,static/description/icon.png" sequence="10"/>

    <!-- menu categories -->
    <menuitem name="Dashboard" id="menu_dashboard" parent="menu_ingresos_egresos" action="action_dashboard" sequence="1"/>
    <menuitem name="Ingresos" id="menu_ingresos" parent="menu_ingresos_egresos" action="action_ingresos" sequence="2"/>
    <menuitem name="Egresos" id="menu_egresos" parent="menu_ingresos_egresos" action="action_egresos" sequence="3"/>
    <menuitem name="Categorias" id="menu_categorias" parent="menu_ingresos_egresos" action="action_categorias" sequence="4"/>

    <!-- actions -->

    
  </data>
</odoo>
